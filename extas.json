{
  "name": "extas/registry",
  "repositories": [
    {
      "name": "extas_packages",
      "scope": "extas",
      "pk": "name",
      "class": "extas\\components\\registry\\RegistryPackage",
      "aliases": ["extasPackages"]
    }
  ],
  "plugins": [
    {
      "class": "extas\\components\\plugins\\api\\PluginRegistry",
      "stage": "extas.api.app.init",
      "install_on": "install"
    },
    {
      "class": "extas\\components\\plugins\\registry\\PluginImage",
      "stage": "extas.registry.response.image",
      "install_on": "install"
    },
    {
      "class": "extas\\components\\plugins\\registry\\PluginImageUrl",
      "stage": "extas.registry.response.image-url",
      "install_on": "install"
    },
    {
      "class": "extas\\components\\plugins\\registry\\PluginJson",
      "stage": "extas.registry.response.json",
      "install_on": "install"
    }
  ],
  "plugins_install": [
    {
      "repository": "extasPackages",
      "name": "extas package",
      "section": "extas_packages"
    }
  ],
  "extensions": [
    {
      "class": "extas\\components\\extensions\\ExtensionRepositoryDescription",
      "interface": "extas\\interfaces\\extensions\\IExtensionRepositoryDescription",
      "subject": "*",
      "methods": ["extasPackages"]
    }
  ],
  "extas_packages": [
    {
      "name": "extas-registry",
      "title": "Registry",
      "description": "Registry for extas packages",
      "parameters": {
        "deprecated": {
          "name": "deprecated",
          "value": false
        }
      }
    }
  ]
}